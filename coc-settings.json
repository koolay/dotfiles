{
  "coc.preferences.enableFloatHighlight": true,
  "coc.preferences.formatOnSaveFiletypes": ["python", "go"],
  "coc.preferences.rootPatterns": [
    ".eslintrc.json",
    ".eslintrc",
    ".vim",
    ".git",
    ".hg",
    ".projections.json"
  ],
  "languageserver": {
    "golang": {
      "command": "gopls",
      "filetypes": ["go"],
      "rootPatterns": ["go.mod", ".git/"],
      "initializationOptions": {
        "gocodeCompletionEnabled": true,
        "diagnosticsEnabled": false,
        "lintTool": "golangci-lint"
      }
    }
  },

  "python.venvPath": "~/.pyenv",
  "python.pipenvPath": "~/.pyenv/shims/pipenv",
  "python.jediEnabled":false,
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length=120", "--verbose", "--skip-string-normalization"],
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.lintOnSave": true,

  "eslint.autoFix": false,
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.options": {
    "configFile": ".eslintrc.json"
  },
  "prettier.eslintIntegration": true,
  "prettier.semi": false,
  "prettier.tabWidth": 4,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.jsxBracketSameLine": true
}
